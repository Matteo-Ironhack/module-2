<form method="post">
	<label for="username">Username</label>
	<input type="text" required name="username" id="username">
	<label for="password">Password</label>
	<input type="password" name="password" id="password">
	<button type="submit">Submit</button>
</form>

{{#if errorMessage}}
	<h4>{{errorMessage}}</h4>
{{/if}}