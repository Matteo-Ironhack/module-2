<div class='container'>
  <h1>Albums result</h1>
  <div class='row'>
    {{#each albums}}
      <div class='col-md-4 mb-3'>
        <div class='card'>
          <img
            class='card-img-top img-thumbnail'
            src='{{this.image}}'
            alt=''
            style='max-height: 200px;'
          />
          <div class='card-body'>
            <h5 class='card-title text-dark'>{{this.name}}</h5>
            <a href='/tracks/{{this.id}}' class='btn btn-primary'>View Tracks</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>